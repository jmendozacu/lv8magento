<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_save_after">
        <observer name="squareup_omni_customer_save_after" instance="Squareup\Omni\Observer\Customer\SaveAfter"/>
    </event>
    <event name="customer_delete_after">
        <observer name="squareup_omni_customer_delete_after" instance="Squareup\Omni\Observer\Customer\DeleteAfter"/>
    </event>
    <event name="sales_order_creditmemo_refund">
        <observer name="squareup_order_creditmemo_observer" instance="Squareup\Omni\Observer\Order\Refund"/>
    </event>
    <event name="sales_model_service_quote_submit_before">
        <observer name="inventory_reindex_square" instance="Squareup\Omni\Observer\AddItemsToReindex"/>
    </event>
    <event name="checkout_submit_before">
        <observer name="square_checkout_submit_before" instance="Squareup\Omni\Observer\Checkout\SubmitBefore" />
    </event>
</config>
